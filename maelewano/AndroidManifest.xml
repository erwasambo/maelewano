<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kiko.softwareltd"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" android:required="true" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_OWNER_DATA"/>
	
    <application
        android:name=".ApplicationContextProvider"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
	
	<activity
            android:name=".SplashscreenActivity"
            android:label="@string/title_activity_splashscreen" 
            android:screenOrientation="landscape"
           	>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
	<activity
            android:name=".HomeActivity"
            android:label="@string/main" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.kiko.softwareltd.home" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
                       
      </activity>
      	<activity
            android:name=".AddgestureActivity"
            android:label="@string/main" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.kiko.softwareltd.addgesture" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
                       
      </activity>
	<activity
            android:name=".CameraAppActivity"
            android:label="@string/main" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.kiko.softwareltd.camera_layout" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
                       
      </activity>
      <activity
            android:name=".LearnActivity"
            android:label="@string/main" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.kiko.softwareltd.learnsign" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
                       
      </activity>
	<activity
            android:name=".GesturesLibraryActivity"
            android:label="@string/main" 
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="com.kiko.softwareltd.gestures_library" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
                       
      </activity>
      <activity
            android:name=".SettingsActivity"
            android:label="@string/main" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.kiko.softwareltd.settings" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
                       
      </activity>
	
    </application>

</manifest>